{
  "name": "@kalanah/api",
  "private": true,
  "scripts": {
    "clean": "rimraf dist",
    "build": "yarn clean && tsc",
    "start": "node dist/server.mjs",
    "dev": "yarn build && concurrently -n \"tsc,nodemon\" -c \"bgBlue.bold,bgRed.bold,bgMagenta.bold\" \"yarn build:watch\" \"yarn server:watch\"",
    "server:watch": "yarn load-vars nodemon dist/server.mjs",
    "build:watch": "tsc --watch --preserveWatchOutput --project tsconfig.json",
    "load-vars": "dotenv -e .env --",
    "db:migrate:new": "tsx scripts/db/migrate-new.mts",
    "db:apply": "yarn load-vars tsx scripts/db/migrate-apply.mts",
    "db:apply:dev": "dotenv -e .env.dev -- tsx scripts/db/migrate-apply.mts",
    "db:apply:prod": "dotenv -e .env.prod -- tsx scripts/db/migrate-apply.mts",
    "db:reset": "yarn load-vars tsx scripts/db/migrate-reset.mts --yes",
    "db:reset:dev": "dotenv -e .env.dev -- tsx scripts/db/migrate-reset.mts --yes",
    "db:types": "yarn load-vars tsx scripts/db/zapatos.mts",
    "db:types:kysely": "yarn load-vars tsx scripts/db/kysely.mts",
    "db:init": "yarn load-vars tsx scripts/db-setup.mts",
    "db:init:dev": "dotenv -e .env.dev -- tsx scripts/db-setup.mts",
    "db:init:prod": "dotenv -e .env.prod -- tsx scripts/db-setup.mts",
    "infra:up": "yarn load-vars podman compose -f ./docker-compose.yaml up -d",
    "infra:up:build": "yarn load-vars podman compose -f ./docker-compose.yaml up --build -d",
    "infra:down": "yarn load-vars podman compose -f ./docker-compose.yaml down"
  },
  "imports": {
    "#kysely/types": "./generated/kysely/schema.d.ts"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.0.0",
    "@types/cors": "^2.8.19",
    "@types/crypto-js": "^4.2.2",
    "@types/express": "^5.0.3",
    "@types/lodash": "^4",
    "@types/multer": "^1.4.13",
    "@types/node": "^24.0.1",
    "@types/pg": "^8",
    "@types/swagger-jsdoc": "^6",
    "@types/swagger-ui-express": "^4.1.8",
    "concurrently": "^9.1.2",
    "cross-env": "^10.1.0",
    "dotenv-cli": "^8.0.0",
    "kysely-codegen": "^0.19.0",
    "nodemon": "^3.1.10",
    "rimraf": "^6.0.1",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@aws-sdk/client-sqs": "^3.893.0",
    "@aws-sdk/credential-providers": "^3.922.0",
    "@aws-sdk/dsql-signer": "^3.922.0",
    "@codegenie/serverless-express": "^4.17.0",
    "aws-jwt-verify": "^5.1.0",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "exponential-backoff": "^3.1.3",
    "express": "^5.1.0",
    "kysely": "^0.28.8",
    "libphonenumber-js": "^1.12.9",
    "lodash": "^4.17.21",
    "multer": "^2.0.1",
    "pg": "^8.16.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.17.0",
    "zapatos": "^6.6.1",
    "zod": "^3.25.64"
  }
}
